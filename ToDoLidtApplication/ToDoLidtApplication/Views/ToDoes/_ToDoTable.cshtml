
@model IEnumerable<ToDoLidtApplication.Models.ToDo>
<div id="progressBarToDo">
   
    <div class="progress">
        @if (ViewBag.Percent == 100)
        {
            <div class="progress-bar" role="progressbar" style="width:@Html.AttributeEncode(ViewBag.Percent)%">@ViewBag.Percent%</div>

        }
        else
        {
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width:@Html.AttributeEncode(ViewBag.Percent)%">@ViewBag.Percent%</div>
        }


    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.IsDone)
                {
                    @Html.DisplayFor(modelItem => item.description)
                }
                else
                {
                <div class="CompletedToDo">@Html.DisplayFor(modelItem => item.description)</div>
                }
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.IsDone ,new {id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
             
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<script src="~/Custom_Scripts/AddCheckBoxListrener.js"></script>